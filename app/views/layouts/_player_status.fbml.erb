<table class="skate_status" cellpadding="0" cellspacing="0">
	<tr>
		<th colspan="2"><%= fb_name(player.facebook_id, :useyou => false, :linked => false) %></th>
	</tr>
	<tr>
		<td>Livello:</td>
		<td><%= player.rank.name %></td>
	</tr>
	<tr>
		<td>Energia:</td>
		<td><%= player.stamina %></td>
	</tr>
	<tr>
		<td>Destrezza:</td>
		<td><%= player.dexterity %></td>
	</tr>
	<tr>
		<td>Esperienza:</td>
		<td><%= player.experience %></td>
	</tr>
	<tr>
		<td>Denaro:</td>
		<td><%= player.money %> &euro; </td>
	</tr>
</table>