<h1>Editing event</h1>

<% form_for(@event) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :caption %><br />
    <%= f.text_area :caption, :cols => 60, :rows => 3 %>
  </p>
  <p>
    <%= f.label :message %><br />
    <%= f.text_area :message, :cols => 60, :rows => 5 %>
  </p>
  <p>
    <%= f.label :image %><br />
    <%= f.text_field :image %>
  </p>
  <p>
    <%= f.label :executable %><br />
    <%= f.text_area :executable, :cols => 60, :rows => 10 %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @event %> |
<%= link_to 'Back', events_path %>