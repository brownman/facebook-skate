<h1>Listing items</h1>

<table cellspacing="1" cellpadding="0">
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Price</th>
		<th>Image</th>
		<th>Attribute</th>
		<th>Quantity</th>
    <th>Rank</th>
		<th colspan="2">Actions</th>
  </tr>

<% @items.each do |item| %>
  <tr>
    <td><%=h item.name %></td>
    <td><%=h item.description %></td>
    <td><%=h item.price %></td>
		<td><img src="images/items/<%= h item.image %>" width="50" /></td>
		<td><%=h item.attribute %></td>
		<td><%=h item.quantity %></td>
    <td><%=h item.rank_id %></td>
    <td><%= link_to 'Edit', edit_item_path(item) %></td>
    <td><%= link_to 'Destroy', item, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New item', new_item_path %>