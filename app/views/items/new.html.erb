<h1>New item</h1>

<% form_for(@item) do |f| %>
  <%= f.error_messages %>
	<%= render :partial => 'form_fields', :locals => {:f => f} %>
  <p>
    <%= f.label :rank_id %><br />
    <%= f.select :rank_id, Rank.all.map{|r| [r.name, r.id]} %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', items_path %>